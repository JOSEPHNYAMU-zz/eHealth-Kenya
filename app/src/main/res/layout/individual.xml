<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="9dp"
        android:paddingLeft="8dp"
        android:paddingRight="6dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/record_picture"
            android:layout_width="105dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="105dp"
            app:srcCompat="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/record_naming"
            android:layout_width="280dp"
            android:layout_toRightOf="@+id/record_picture"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Name"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/record_naming_date"
            android:text="Date"
            android:layout_width="280dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_today_black_24dp"
            android:textSize="13dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/record_picture"
            android:maxLength="230"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="STATUS"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/record_picture"
            android:maxLength="230"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status_icon_ok"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13dp"
            android:gravity="right"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/status"
            android:maxLength="230"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.design.card.MaterialCardView>