<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="9dp"
        android:paddingLeft="8dp"
        android:paddingRight="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/record_place"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/record_picture"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:text="Place"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/record_phones"
            android:text="Phone"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:textSize="13dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="10dp"
            android:maxLength="230"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/record_address_location"
            android:text="Address"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_work_black_24dp"
            android:textSize="13dp"
            android:layout_marginTop="60dp"
            android:drawablePadding="10dp"
            android:maxLength="230"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.design.card.MaterialCardView>