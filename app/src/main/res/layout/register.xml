<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="490dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/textColor"
    android:padding="10dp"
    android:layout_gravity="center">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_mode_edit_black_24dp"
                android:drawablePadding="10dp"
                android:textColor="@color/textColor"
                android:background="@color/blackColor"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:text="SIGN UP" />


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/firstname_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSignifier="@drawable/ic_person_black_24dp"
                app:primaryColor="#000000"
                app:secondaryColor="#9e9e9e"
                android:layout_marginBottom="13dp"
                app:useDenseSpacing="true"
                app:panelBackgroundColor="#ffffff"
                app:labelText="@string/first">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:layout_height="wrap_content" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/lastname_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSignifier="@drawable/ic_person_black_24dp"
                app:primaryColor="#000000"
                app:secondaryColor="#9e9e9e"
                android:layout_marginBottom="13dp"
                app:useDenseSpacing="true"
                app:panelBackgroundColor="#ffffff"
                app:labelText="@string/last">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/uname_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSignifier="@drawable/ic_group_add_black_24dp"
                app:primaryColor="#000000"
                app:secondaryColor="#9e9e9e"
                android:layout_marginBottom="13dp"
                app:useDenseSpacing="true"
                app:panelBackgroundColor="#ffffff"
                app:labelText="@string/prompt_email">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/uname"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/pass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSignifier="@drawable/ic_https_black_24dp"
                app:primaryColor="#000000"
                app:secondaryColor="#9e9e9e"
                android:layout_marginBottom="13dp"
                app:useDenseSpacing="true"
                app:panelBackgroundColor="#ffffff"
                app:labelText="@string/pass">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/pass2_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSignifier="@drawable/ic_https_black_24dp"
                app:primaryColor="#000000"
                app:secondaryColor="#9e9e9e"
                android:layout_marginBottom="10dp"
                app:useDenseSpacing="true"
                app:panelBackgroundColor="#ffffff"
                app:labelText="@string/repeat_pass">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/pass2"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/close_dialog"
                    style="?android:textAppearanceSmall"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:textColor="@color/textColor"
                    android:text="@string/action_cancel"
                    android:background="@drawable/cancel"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" />


                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/sign_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    app:spinning_bar_width="4dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    style="?android:textAppearanceSmall"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:textColor="@color/textColor"
                    android:text="@string/action_sign_up"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>